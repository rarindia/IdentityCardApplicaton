
@model IDC.ViewModel.StudentReportViewModel
@{
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}
<script src="~/Content/Theme/vendors/bower_components/typeahead.js/dist/typeahead.bundle.js"></script>
<script src="@Url.Content("~/Scripts/IDC_Scripts/Student/Report/StudentIdentityCardReport.js")" type="text/javascript"></script>

@if (!Model.IsUnderValidity)
{
<div class="container">
    <div class="card">
        <h2 style="text-transform: none;">License Expired</h2>
    </div>
</div>
}
else
{
<div class="container">
    @if (Model.IsShowMessage)
    {
        <marquee style="color:red">License will expire in @Model.ExpiredInDays days. Renew it as early as possible.</marquee>
    }
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @using (Html.BeginForm("Index", "StudentIdentityCardReport", FormMethod.Post, new { enctype = "multipart/form-data", id = "GroupForm" }))
    {
        <div class="block-header">
            <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Student Identity Card</h2>
        </div>
        <div class="card" style="margin-bottom: 0px;">
            <div class="card-body card-padding" style="padding-bottom:10%;">
                @Html.HiddenFor(m => m.StudentId)
                @Html.HiddenFor(m => m.IsPosted)
                <div class="col-sm-12">
                    <div class="col-sm-4">
                        @Html.LabelFor(m => m.SelectedICardView, new { })
                        <div class="fg-line select form-group">
                            @Html.DropDownList("SelectedICardView", ViewData["SelectedICardView"] as List<SelectListItem>, new { @class = "form-control", style = "" })
                        </div>
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(m => m.StudentFullName, new { })
                        <div class="fg-line form-group">
                            @Html.TextBoxFor(m => m.StudentFullName, new { @class = "form-control" })
                        </div>
                    </div>


                    <div class="col-sm-2" id="divShowStudentList">

                        <button type="submit" name="submit" id="btnStudentIdentityCardReportSubmit" class="btn-primary btn">Show</button>

                    </div>
                </div>
            </div>
        </div>
    }
</div>

    <div class="container" style="margin-top:-10px">
        <div id="aaa">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-body card-padding">
                    @Html.Partial("/Views/Student/Report/StudentIdentityCardReport/StudentIdentityCardReport.aspx")
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        StudentIdentityCardReport.Initialize();
        $("#GroupForm").submit(function () {
            // $("#CreatedBy").val($("#selectedBalsheetID").val());
        });
    });
</script>
